{{#if isEditing}}
  {{partial 'post/edit'}}
  <button {{action 'doneEditing'}}>Done</button>
{{else}}
  <button {{action 'edit'}}>Edit</button>
{{/if}}

<h3>{{model.title}}</h3>
<h2>by {{model.author.name}} <small class="muted">{{model.date}}</small></h2>

<hr>

<div class="body">
  {{showdown-helper model.body}}
</div>